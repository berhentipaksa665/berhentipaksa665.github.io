---
layout: null
permalink: /search.json
---
[
  {% assign all_content = site.posts | concat: site.pages %}
  {% for page in all_content %}
  {
    "title": {{ page.title | jsonify }},
    "url": "{{ page.url | relative_url }}",
    "image": {% if page.image %}{{ page.image | jsonify }}{% else %}"/assets/img/default.jpg"{% endif %},
    "content": {% if page.content %}{{ page.content | strip_html | normalize_whitespace | jsonify }}{% else %}""{% endif %},
    "categories": {% if page.categories %}{{ page.categories | jsonify }}{% else %}[] {% endif %}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
