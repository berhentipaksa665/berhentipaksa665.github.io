---
layout: null
permalink: /search.json
---
[
  {% assign allDocs = site.posts | concat: site.pages | where_exp:"doc","doc.title and doc.content" %}
  {% for doc in allDocs %}
  {
    "title": {{ doc.title | jsonify }},
    "url": "{{ doc.url | relative_url }}",
    "content": {{ doc.content | strip_html | normalize_whitespace | jsonify }},
    "categories": {{ doc.categories | default: "" | jsonify }}
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
